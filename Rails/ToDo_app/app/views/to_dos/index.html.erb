<p id="notice"><%= notice %></p>

<div class = "container">
<h1>Listing To Dos</h1>

<table class = table border = "10px">

  <thead>
    <tr>
      <th>Task</th>
      <th>Notes</th>
      <th>Due</th>
      <th>Done</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @to_dos.each do |to_do| %>
      <tr>
        <td><%= to_do.title %></td>
        <td><%= to_do.notes %></td>
        <td><%= to_do.due %></td>
        <td><%= to_do.done %></td>
        <td><%= link_to 'Show', to_do %></td>
        <td><%= link_to 'Edit', edit_to_do_path(to_do) %></td>
        <td><%= link_to 'Remove', to_do, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New To do', new_to_do_path %>

<div id = "bgchange">
<button type="button" class="btn btn-default">Background</button>
</div>
</div>
